<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="blog">
	
	<select id="findAll" resultType="entity.Blog">
		SELECT * FROM blog
	</select>
	
	<select id="findById" parameterType="String" resultType="entity.Blog">
		SELECT * FROM blog WHERE id = #{id}
	</select>
	
	<insert id="insert" parameterType="entity.Blog">
		INSERT INTO blog(title, content, comment) VALUES(#{title}, #{content}, #{comment})
	</insert>
	
	<update id="editBlog" parameterType="entity.Blog">
		UPDATE blog SET title = #{title}, content=#{content} WHERE id = #{id}
	</update>
	
	<delete id="deleteById" parameterType="int">
		DELETE FROM blog WHERE id = #{id}
	</delete>
</mapper>